@model Player

<h3>@Model.FirstName Information</h3>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Position</th>
        <th>Active</th>
        <th>Citizenship</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Jersey Number</th>
    </tr>
    <tr>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Position</td>
        <td>@Model.Active</td>
        <td>@Model.Citizenship</td>
        <td>@Model.Email</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.JerseyNumber</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Player/UpdatePlayer/@Model.PlayerID">Update this Player</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeletePlayer", "Player", "Post"))
    {
        <input type="hidden" asp-for="PlayerID" value="@Model.PlayerID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this player" />
    }
</div>
