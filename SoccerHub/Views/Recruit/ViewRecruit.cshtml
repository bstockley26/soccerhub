@model Recruit

<h3>@Model.FirstName @Model.LastName Information</h3>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Position</th>
        <th>Citizenship</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Club Team</th>
    </tr>
    <tr>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Position</td>
        <td>@Model.Citizenship</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.Email</td>
        <td>@Model.ClubTeam</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Recruit/UpdateRecruit/@Model.RecruitID">Update this Recruit</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteRecruit", "Recruit", "Post"))
    {
        <input type="hidden" asp-for="RecruitID" value="@Model.RecruitID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this recruit" />
    }
</div>
