@model Recruit

<h2>Create a New Recruit</h2>

@using (Html.BeginForm("InsertRecruitToDatabase", "Recruit", "Post"))
{
    <label asp-for="RecruitID" class="control-label">Recruit ID</label>
    <input type="number" name="RecruitID" class="form-control" value="" min="0" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="" />

    <label asp-for="Citizenship" class="control-label">Citizenship</label>
    <input type="text" name="Citizenship" class="form-control" value="" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="" />

    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email" class="form-control" value="" />

    <label asp-for="ClubTeam" class="control-label">Club Team</label>
    <input type="text" name="ClubTeam" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select a Position</label>
        <select class="form-control" name="Position" value="">
            @foreach (var pos in Model.Positions)
            {
                <option value="@pos.PositionID">@pos.PositionName</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Recruit" class="btn btn-primary" />
}
